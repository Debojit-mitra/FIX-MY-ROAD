<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/inverseMode"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/bottom_shape"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textview_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:gravity="center"
                android:padding="15dp"
                android:text="PROFILE"
                android:textColor="@color/mode"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/bottom_shape"
            android:gravity="center">

            <ImageView
                android:id="@+id/userprofile_refresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_refresh"></ImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_profile_dp_inside"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_image"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_profile_dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_image"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />


            <TextView
                android:id="@+id/textview_show_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_profile_dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nunitobold"
                android:gravity="center"
                android:text="Loading..."
                android:textColor="@color/mode"
                android:textSize="24dp"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_show_welcome"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ic_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_profile" />


                <TextView
                    android:id="@+id/textview_show_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nunitoregular"
                    android:text="Loading..."
                    android:textColor="@color/mode"
                    android:textSize="18dp"></TextView>

                <View
                    android:id="@+id/divider_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/textview_show_full_name"
                    android:layout_marginTop="7dp"
                    android:background="@color/mode"></View>

                <ImageView
                    android:id="@+id/ic_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/divider_name"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_email" />

                <TextView
                    android:id="@+id/textview_show_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_show_full_name"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/nunitoregular"
                    android:text="Loading..."
                    android:textColor="@color/mode"
                    android:textSize="18dp"></TextView>

                <View
                    android:id="@+id/divider_email"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/textview_show_email"
                    android:layout_marginTop="7dp"
                    android:background="@color/mode"></View>

                <ImageView
                    android:id="@+id/ic_dob"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/divider_email"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_dob" />

                <TextView
                    android:id="@+id/textview_show_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_show_email"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/nunitoregular"
                    android:text="Loading..."
                    android:textColor="@color/mode"
                    android:textSize="18dp"></TextView>

                <View
                    android:id="@+id/divider_dob"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/textview_show_dob"
                    android:layout_marginTop="7dp"
                    android:background="@color/mode"></View>

                <ImageView
                    android:id="@+id/ic_gender"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/divider_dob"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/ic_gender" />

                <TextView
                    android:id="@+id/textview_show_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_show_dob"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/nunitoregular"
                    android:text="Loading..."
                    android:textColor="@color/mode"
                    android:textSize="18dp"></TextView>

                <View
                    android:id="@+id/divider_gender"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/textview_show_gender"
                    android:layout_marginTop="7dp"
                    android:background="@color/mode"></View>

                <ImageView
                    android:id="@+id/ic_mobile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/ic_gender"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/ic_mobile" />

                <TextView
                    android:id="@+id/textview_show_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_show_gender"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/nunitoregular"
                    android:text="Loading..."
                    android:textColor="@color/mode"
                    android:textSize="18dp"></TextView>

                <View
                    android:id="@+id/divider_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/textview_show_mobile"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/mode"></View>

                <Button
                    android:id="@+id/button_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_mobile"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_shape"
                    android:fontFamily="@font/nunitobold"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:text="Edit\nProfile"
                    android:textColor="@color/white"
                    android:textSize="15dp"></Button>

                <Button
                    android:id="@+id/button_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_mobile"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_shape"
                    android:fontFamily="@font/nunitobold"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="20dp"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:textSize="15dp"></Button>

                <Button
                    android:id="@+id/button_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_mobile"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_shape"
                    android:fontFamily="@font/nunitobold"
                    android:paddingLeft="80dp"
                    android:paddingTop="20dp"
                    android:paddingRight="80dp"
                    android:paddingBottom="20dp"
                    android:text="Give Feedback"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone"/>

            </RelativeLayout>




        </RelativeLayout>


    </LinearLayout>

</ScrollView>